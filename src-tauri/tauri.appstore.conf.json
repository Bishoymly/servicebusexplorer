{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Azure Service Bus Explorer",
  "version": "0.1.0",
  "identifier": "com.bishoylabib.servicebusexplorer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Azure Service Bus Explorer",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app-store"],
    "icon": [
      "icons/1024x1024.png",
      "icons/512x512.png",
      "icons/128x128@2x.png",
      "icons/128x128.png",
      "icons/32x32.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "target/resources/standalone/**/*"
    ],
    "macOS": {
      "entitlements": "Entitlements.plist",
      "files": {
        "embedded.provisionprofile": "embedded.provisionprofile"
      },
      "category": "public.app-category.developer-tools",
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}

